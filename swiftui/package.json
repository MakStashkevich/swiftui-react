{
  "name": "@makstashkevich/swiftui-react",
  "version": "1.0.0",
  "description": "A plugin that brings SwiftUI design aesthetics to React (Next.js and others), without supporting React Native. Includes UI elements, components, hooks, and utilities for design modifications.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/*.css": "./dist/*.css",
    "./dist/components/*": "./dist/components/*",
    "./dist/types/*": "./dist/types/*"
  },
  "scripts": {
    "build": "rm -rf ./dist && cross-env NODE_ENV=production rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs --watch"
  },
  "keywords": [
    "react",
    "swiftui",
    "ui",
    "components",
    "hooks",
    "utilities"
  ],
  "author": "Maksim Stashkevich <makstashkevich@gmail.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@swc/core": "^1.15.3",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "classnames": "^2.5.1",
    "cross-env": "^10.1.0",
    "glob": "^13.0.0",
    "postcss": "^8.5.6",
    "rollup": "^4.53.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-swc3": "^0.12.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "rollup-plugin-preserve-directives": "^0.4.0"
  }
}
